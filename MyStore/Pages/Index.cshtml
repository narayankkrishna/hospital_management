    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn:hover {
    background-color: #0056b3;
}

/* Responsive Adjustments */
 (max-width: 768px) {
    #home {
        padding: 80px 0;
    }

    #home h1 {
        font-size: 2rem;
